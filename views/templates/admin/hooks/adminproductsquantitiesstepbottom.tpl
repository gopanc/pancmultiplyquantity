<div class="col-md-12">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>
                {l s='Multiply quantity Module' mod='pancmultiplyquantity'}
            </h2>
        </div>
        <div class="col-xl-2 col-lg-3 form-group">
            <label class="form-control-label">Multiply Quantity by:</label>
                    
            <div class="input-group money-type">
                <div class="input-group-prepend">
                    <span class="input-group-text">X </span>
                </div>
                <input type="text" name="panc_mpnumber" class="form-control" value="{$panc_mpnumber}"/>
                <p class="subtitle italic">This will also be used as the minimum quantity for sale</p>
            </div>
        </div>
    </div>
</div>